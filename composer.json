{

  "name": "gsouf/skeleton",
  "description": "",
  "type": "library",
  "keywords": [],
  "homepage": "https://github.com/gsouf/php-package-skeleton",
  "license": "Fair",

  "authors": [
    {
      "name": "Soufiane GHZAL",
      "homepage": "https://github.com/gsouf"
    }
  ],

  "autoload":{
    "psr-4" : {
      "{{PROJECT_NAME}}\\": "src/"
    }
  },

  "autoload-dev":{
    "psr-4" : {
      "{{PROJECT_NAME}}\\Test\\": "test/suites"
    }
  },

  "require": {
    "php": ">=5.5.9"
  },

  "require-dev":{
    "phpunit/phpunit": "4.1.2",
    "squizlabs/php_codesniffer": "~2.5"
  },
  
  "scripts": {
      "test": "vendor/bin/phpunit -c phpunit.dist.xml",
      "csfix": "yes 2>/dev/null | test/bin/phpcbf.bash",
      "cscheck": "test/bin/phpcs.bash emacs"
  }
}
