{

  "name": "gsouf/skeleton",
  "description": "",
  "type": "library",
  "keywords": [],
  "homepage": "https://github.com/gsouf/php-package-skeleton",
  "license": "Fair",

  "authors": [
    {
      "name": "Soufiane GHZAL",
      "homepage": "https://github.com/gsouf"
    }
  ],

  "autoload":{
    "psr-4" : {
      "{{PROJECT_NAME}}\\": "src/"
    }
  },

  "autoload-dev":{
    "psr-4" : {
      "{{PROJECT_NAME}}\\Test\\": "test/suites"
    }
  },

  "require": {
    "php": ">=5.5"
  },

  "require-dev":{
    "phpunit/phpunit": "4.1.2",
    "squizlabs/php_codesniffer": "~2.5"
  },
  
  "scripts": {
    "phpunit": "test/bin/test.bash",
    "test": [
      "@phpunit",
      "@cscheck"
    ],
    "csfix": "test/bin/phpcbf.bash",
    "cscheck": "test/bin/phpcs.bash emacs"
  },
}
